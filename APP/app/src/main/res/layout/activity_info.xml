<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#343d46">

    <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#fff" android:textSize="25dp" android:textStyle="bold"
                  android:text="겨울 이야기" android:layout_marginTop="30dp"/>

        <View
                style="@style/separator"
                android:layout_width="230dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#fff" android:textSize="17dp" android:textStyle="normal"
                  android:text="당신의 고민을 녹여드립니다"/>

        <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           app:cardCornerRadius="25dp"
                                           app:cardElevation="10dp"
                                           app:cardBackgroundColor="#2EE59D" android:layout_margin="70dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="?attr/selectableItemBackground"
                            android:clickable="true" android:id="@+id/gotoSite">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textColor="#fff" android:textSize="15dp" android:textStyle="bold"
                          android:text="고민 올리기" android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
                          android:layout_marginTop="12dp" android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#fff" android:textSize="15dp" android:textStyle="normal"
                  android:gravity="center"
                  android:text="본 앱은 생명 감성 &amp; 트랜스 휴먼 스튜디오\n파이널 프로젝트로 제작되었습니다."
                  android:layout_marginLeft="50dp" android:layout_marginRight="50dp"
                  android:lineSpacingExtra="5dp" android:layout_marginBottom="30dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center" android:layout_marginTop="30dp">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="2" android:gravity="right"
                      android:textColor="#fff" android:textSize="15dp" android:textStyle="normal"
                      android:text="박원빈" android:layout_marginRight="10dp"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="1" android:gravity="left"
                      android:textColor="#fff" android:textSize="15dp" android:textStyle="normal"
                      android:text="wonbin9413@postech.ac.kr"
                      android:textIsSelectable="true" android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                      android:gravity="center" android:layout_marginTop="10dp">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="2" android:gravity="right"
                      android:textColor="#fff" android:textSize="15dp" android:textStyle="normal"
                      android:text="강태영" android:layout_marginRight="10dp"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="1" android:gravity="left"
                      android:textColor="#fff" android:textSize="15dp" android:textStyle="normal"
                      android:text="tytk18@postech.ac.kr"
                      android:textIsSelectable="true" android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                      android:gravity="center" android:layout_marginTop="10dp">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="2" android:gravity="right"
                      android:textColor="#fff" android:textSize="15dp" android:textStyle="normal"
                      android:text="김진우" android:layout_marginRight="10dp"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="1" android:gravity="left"
                      android:textColor="#fff" android:textSize="15dp" android:textStyle="normal"
                      android:text="kjwoo31@postech.ac.kr"
                      android:textIsSelectable="true" android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center" android:layout_marginTop="10dp" android:layout_marginBottom="30dp">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="2" android:gravity="right"
                      android:textColor="#fff" android:textSize="15dp" android:textStyle="normal"
                      android:text="이용석" android:layout_marginRight="10dp"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="1" android:gravity="left"
                      android:textColor="#fff" android:textSize="15dp" android:textStyle="normal"
                      android:text="dldydtjr2000@postech.ac.kr"
                      android:textIsSelectable="true" android:layout_marginLeft="10dp"/>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
