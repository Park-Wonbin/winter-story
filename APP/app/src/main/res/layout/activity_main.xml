<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#343d46">

    <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/moon"
               android:layout_gravity="top|start" android:layout_marginTop="25dp" android:layout_marginStart="35dp"/>

    <ImageView android:id="@+id/cloud" android:layout_width="130dp" android:layout_height="130dp" android:src="@drawable/cloud"
               android:layout_gravity="center_horizontal"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp" android:background="#fff"
                  android:layout_gravity="bottom"/>

    <ImageView android:layout_width="130dp" android:layout_height="130dp" android:src="@drawable/tree"
               android:layout_gravity="bottom|end" android:layout_marginEnd="15dp" android:layout_marginBottom="35dp"/>

    <com.jawnnypoo.physicslayout.PhysicsFrameLayout
           android:layout_marginTop="60dp"
           android:layout_marginBottom="45dp"
           android:id="@+id/physics_layout"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

</FrameLayout>